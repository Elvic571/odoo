    <menuitem id="sync_import_root_menu"
              name="Import Goflow"
              parent="sale.sale_menu_root"
              sequence="20">

        <menuitem id="menu_sync_import_orders" sequence="30" name="Orders">

            <menuitem id="menu_sync_import_picking" name="Import Picklist"
                      action="action_goflow_sync_orders_date_wiz_in_picking" sequence="2"/>

            <menuitem id="menu_sync_import_ready_to_pick" name="Import New Orders"
                      action="action_goflow_sync_orders_date_wiz_ready_to_pick" sequence="4"/>

            <menuitem id="menu_sync_invoice_delivery" name="--> Invoice Delivery"
                      action="import_sync.action_update_sp_invoice_delivery" sequence="5"/>

            <menuitem id="menu_sync_batch_transfers" name="--> Batch Transfers"
                  action="import_sync.action_update_so_batch_transfers" sequence="6"/>

            <menuitem id="menu_sync_import_orders_shipped" name="Import Shipped Orders"
                  action="action_goflow_sync_orders_date_wiz_shipped" sequence="7"/>

            <menuitem id="menu_export_adjusment_inventory" name="Export Inventory"
                  action="import_sync.action_export_product" sequence="50"/>
        </menuitem>
        <menuitem id="sync_import_others" sequence="40" name="Goflow Settings" >

            <menuitem id="menu_sync_import_products" name="Import Products"
                  action="import_sync.sync_goflow_products" sequence="8"/>

            <menuitem id="menu_sync_import_stores" name="Import Stores" action="import_sync.sync_goflow_stores"
                  sequence="9" />

            <menuitem id="menu_sync_import_tags" name="Import Tags" action="import_sync.sync_goflow_tags" sequence="10" />
        </menuitem>
    </menuitem>

    <menuitem id="import_sync_main_menu"
              name="Import Goflow"
              parent="import_sync.sync_import_root_menu"
              sequence="90"
    />

</odoo>
