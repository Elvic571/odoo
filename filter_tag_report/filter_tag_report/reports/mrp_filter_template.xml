<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_invoice_template_filter">
        <t t-call="web.html_container">
            <div class="page">
                <t t-foreach="docs" t-as="doc">

                    <t t-if="doc['total'] and doc['total'] > 0">

                        <t t-set="total_as_int" t-value="int(doc['total'])"/>

                        <t t-set="width_as_int" t-value="int(doc['width'])"/>
                        <t t-set="length_as_int" t-value="int(doc['length'])"/>
                        <t t-set="height_as_int" t-value="int(doc['height'])"/>
                        <div class='col' style="text-align:center;font-size:35px">
                            <t t-foreach="range(total_as_int)" t-as="i">
                                <b>
                                <t t-esc="width_as_int"/>
                                x
                                <t t-esc="length_as_int"/>
                                x
                                    <t t-esc="height_as_int"/></b>
                                <p style="page-break-after: always;"/>

                            </t>
                        </div>
                    </t>

                </t>
            </div>
        </t>
    </template>
</odoo>
