<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_stock_pivot" model="ir.ui.view">
        <field name="name">sale.stock.pivot</field>
        <field name="model">sale.stock.report</field>
        <field name="arch" type="xml">
            <pivot string="Stock Sale Report">
                <field name="product_id" type="col"/>
                <field name="bb" type="measure"/>
                <field name="on_hand" type="measure"/>
                <field name="difference" type="measure"/>
                <field name="difference_status" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_sale_stock_graph" model="ir.ui.view">
        <field name="name">sale.stock.graph</field>
        <field name="model">sale.stock.report</field>
        <field name="arch" type="xml">
            <graph string="Stock Sale Report" type="line">
                <field name="product_id" type="line"/>
            </graph>
        </field>
    </record>

    <!-- Pie Chart View -->
    <record id="sale_stock_graph_pie" model="ir.ui.view">
        <field name="name">sale.stock.graph.pie</field>
        <field name="model">sale.stock.report</field>
        <field name="inherit_id" ref="view_sale_stock_graph"/>
        <field name="arch" type="xml">
            <graph position="attributes">
                <attribute name="type">pie</attribute>
                <attribute name="order">DESC</attribute>
                <field name="product_id" type="pie"/>
            </graph>
        </field>
    </record>

    <!-- Bar Chart View -->
    <record id="sale_stock_graph_bar" model="ir.ui.view">
        <field name="name">sale.stock.graph.bar</field>
        <field name="model">sale.stock.report</field>
        <field name="inherit_id" ref="view_sale_stock_graph"/>
        <field name="arch" type="xml">
            <graph position="attributes">
                <attribute name="type">bar</attribute>
                <attribute name="order">DESC</attribute>
                <field name="product_id" type="bar"/>
            </graph>
        </field>
    </record>

    <!-- Tree View -->
    <record id="sale_stock_view_tree" model="ir.ui.view">
        <field name="name">sale.stock.view.tree</field>
        <field name="model">sale.stock.report</field>
        <field name="arch" type="xml">
            <tree string="Stock Sale Report">
                <field name="product_id"/>
            </tree>
        </field>
    </record>


    <record id="sale_stock_search" model="ir.ui.view">
        <field name="name">sale.stock.search</field>
        <field name="model">sale.stock.report</field>
        <field name="arch" type="xml">
            <search string="Stock Sale Report">
                <field name="product_id"/>
                <field name="difference_status"/>
                <filter string="Short" name="short" domain="[('difference_status', '=', 'SHORT')]"/>
                <filter string="OK" name="ok" domain="[('difference_status', '=', 'OK')]"/>
                <filter string="On Hand > 0" name="on_hand_positive" domain="[('on_hand', '&gt;', 0)]"/>
                <filter string="On Hand = 0" name="on_hand_zero" domain="[('on_hand', '=', 0)]"/>
                <filter string="BB > 0" name="bb_positive" domain="[('bb', '&gt;', 0)]"/>
                <filter string="Difference &gt; 0" name="difference_positive" domain="[('difference', '&gt;', 0)]"/>
                <filter string="Difference &lt; 0" name="difference_negative" domain="[('difference', '&lt;', 0)]"/>
            </search>
        </field>
    </record>

    <record id="action_sale_stock_report" model="ir.actions.act_window">
        <field name="name">Stock Sale Report</field>
        <field name="res_model">sale.stock.report</field>
        <field name="view_mode">graph,pivot</field>
        <field name="view_id" ref="view_sale_stock_graph"/>
        <field name="search_view_id" ref="sale_stock_search"/>
        <field name="help">This report performs analysis on your stock sales...</field>
    </record>

    <record id="action_sale_stock_report_detailed" model="ir.actions.act_window">
        <field name="name">Detailed Stock Sale Report</field>
        <field name="res_model">sale.stock.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="sale_stock_view_tree"/>
        <field name="search_view_id" ref="sale_stock_search"/>
        <field name="help">This report provides a detailed view of stock sales...</field>
    </record>

    <menuitem id="menu_reporting_stock"
              name="Stock On-Hand"
              action="action_sale_stock_report"
              parent="sale.menu_sale_report"
              sequence="10"/>

</odoo>
