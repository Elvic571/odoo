<odoo>
    <record id="view_date_range_wizard_form" model="ir.ui.view">
        <field name="name">date.range.wizard.form</field>
        <field name="model">date.range.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Date Range">
                <group>
                    <field name="date_from" />
                    <field name="date_to" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_btn" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
